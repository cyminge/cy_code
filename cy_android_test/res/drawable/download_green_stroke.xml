<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false" >
            <solid android:color="#FFFF00" />
            <gradient android:startColor="#00FF00" android:endColor="#0000FF" android:angle="135"/>
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:right="5dp">
        <shape android:shape="oval" >
            <solid android:color="#FF0000" />
            <padding
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>

</layer-list>

