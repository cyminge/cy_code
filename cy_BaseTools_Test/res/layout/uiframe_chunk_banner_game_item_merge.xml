<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_banner_height"
            android:contentDescription="@string/str_empty_message"
            android:scaleType="center"
            android:background="@drawable/uiframe_icon_big_rectangle_mormal_bg" />
      

        <TextView
            android:id="@+id/game_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/simple_banner_title_margin_bottom"
            android:singleLine="true"
            android:textColor="@color/default_bitmap_text_color"
            android:textSize="@dimen/slide_textview_size" />

        <com.cy.imageloader.ui.AlphaAnimImageView
            android:id="@+id/banner_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_banner_height"
            android:contentDescription="@string/str_empty_message"
            android:scaleType="fitXY" />

        <ViewStub
            android:id="@+id/banner_download_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/banner_download_wrap_margin_right"
            android:layout="@layout/uiframe_banner_download_view"/>
    </FrameLayout>

</merge>