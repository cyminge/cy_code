<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- theme -->
    <style name="Dialog">
        <item name="android:windowAnimationStyle">@style/Animation.Amigo.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Animation.Amigo.Dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/amigo_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/amigo_dialog_exit</item>
    </style>

    <!-- color -->
    <color name="positive_button_background_normal">#00FFFFFF</color>
    <color name="negative_button_background_normal">#00FFFFFF</color>
    <color name="dialog_title_color">#FF80BC38</color>
    <color name="dialog_message_color">#FF222222</color>
    <color name="negative_button_normal_color">#FF222222</color>
    <color name="negative_button_press_color_new">#FF80BC38</color>
    <color name="negative_button_press_color">#FFFFFFFF</color>
    <color name="positive_button_normal_color">#FF222222</color>
    <color name="positive_button_press_color_new">#FF80BC38</color>
    <color name="positive_button_press_color">#FFFFFFFF</color>
    <color name="share_item_press_bg_color">#FFFF9000</color>

    <!-- dimens -->
    <dimen name="dialog_default_width">320dip</dimen>
    <dimen name="dialog_title_size">18dip</dimen>
    <dimen name="dialog_title_margin_left">14dip</dimen>
    <dimen name="dialog_title_height">48dip</dimen>
    <dimen name="dialog_message_size">18dip</dimen>
    <dimen name="dialog_message_max_height">300dip</dimen>
    <dimen name="dialog_button_bar_height">53dip</dimen>
    <dimen name="dialog_button_divider_padding">3dip</dimen>
    <dimen name="dialog_button_size">16dip</dimen>
    <dimen name="dialog_content_margin_left_right">18dip</dimen>
    <dimen name="dialog_content_margin_top">18dip</dimen>
    <dimen name="dialog_content_padding_bottom">18dip</dimen>
    <dimen name="dialog_button_border_size">0.3dip</dimen>
    <dimen name="dialog_checkbox_margin_left">13dip</dimen>
    <dimen name="single_choice_padding_left">17dip</dimen>
    <dimen name="single_choice_padding_right">10dip</dimen>
    <dimen name="single_choice_padding_top_bottom">16dip</dimen>
    <dimen name="single_choice_button_size">20dip</dimen>
    
    <!-- integer -->
    <integer name="amigo_longAnimTime">300</integer>

</resources>