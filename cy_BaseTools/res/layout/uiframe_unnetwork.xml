<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unnetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/unnetwork_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:background="@drawable/uiframe_no_content"
        android:contentDescription="4" />

    <TextView
        android:id="@+id/exception_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unnetwork_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dip"
        android:text="@string/no_net_msg"
        android:textColor="#FFCDD0D3"
        android:textSize="16sp" />

</RelativeLayout>